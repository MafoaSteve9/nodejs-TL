<html>
<head>
        <title>Todo List</title>
        <meta charset="UTF-8">
</head>
<body>
        <h1>Todo List</h1>

        <form method="POST" action="/task">
            <input type="text" placeholder="Nouvelle tâche" name="task" autofocus>
            <button type="submit">Ajouter</button>
        </form>

        <h3>Tâches</h3>

        <ul>
            <% tasks.forEach((task) => { %>
                <% if (task.done) { %>
                    <li>
                        <s><%= task.title  %></s>
                        |  <a href="#">Suprimer</a>
                    </li>
                    <% } else { %>
                <li>
                   <%= task.title %> | <a href="#">Terminé</a>
                </li>
                <% } %>    
            <%  }) %>
        </ul>
</body>
</html>